{
  "name": "openplayerjs",
  "version": "2.10.0",
  "homepage": "https://www.openplayerjs.com/",
  "author": {
    "name": "Rafael Miranda",
    "email": "rafa8626@gmail.com"
  },
  "license": "MIT",
  "description": "HTML5 video and audio player",
  "repository": {
    "url": "https://github.com/openplayerjs/openplayerjs.git",
    "type": "git"
  },
  "main": "./dist/openplayer.js",
  "style": "./dist/openplayer.css",
  "module": "./dist/esm/player.js",
  "types": "./types/player.d.ts",
  "files": [
    "dist/*",
    "docs/*",
    "types/*"
  ],
  "keywords": [
    "media",
    "video",
    "audio",
    "hls",
    "dash",
    "mp4",
    "mp3",
    "openplayer",
    "openplayerjs",
    "vast",
    "vpaid",
    "player",
    "video-player",
    "audio-player",
    "html5-media",
    "hlsjs",
    "ima-sdk"
  ],
  "scripts": {
    "build": "npm test && npm run build:sources",
    "build:sources": "[ -d ./dist ] && rm -R ./dist; webpack --mode=production && npm run create-esm && npm run create-d-types",
    "create-d-types": "tsc -p tsconfig-types.json",
    "create-esm": "[ -d ./dist/esm ] && rm -R ./dist/esm; tsc -p tsconfig-esm.json",
    "release": "npm run build && release-it",
    "test": "npm run test:sources -- --coverage && tsd",
    "test:sources": "jest",
    "test:changes": "jest -o"
  },
  "readme": "https://github.com/openplayerjs/openplayerjs/blob/master/README.md",
  "devDependencies": {
    "@babel/core": "^7.17.4",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@release-it/conventional-changelog": "^4.1.0",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@types/jest": "^27.4.0",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "autoprefixer": "^10.3.7",
    "babel-loader": "^8.2.3",
    "babel-preset-minify": "^0.5.1",
    "conventional-changelog": "^3.1.25",
    "copy-webpack-plugin": "^9.1.0",
    "css-loader": "^6.6.0",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "cssnano": "^5.0.17",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.5.1",
    "lint-staged": "^11.2.0",
    "mini-css-extract-plugin": "^2.3.0",
    "postcss": "^8.3.9",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.1.1",
    "postcss-preset-env": "^7.4.0",
    "prettier": "^2.4.1",
    "release-it": "^14.12.4",
    "standard-version": "^9.3.2",
    "stylelint": "^13.13.1",
    "stylelint-order": "^4.1.0",
    "terser-webpack-plugin": "^5.3.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "tsd": "^0.17.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5",
    "unminified-webpack-plugin": "^3.0.0",
    "webpack": "^5.69.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "auto-changelog": "^1.16.4",
    "core-js": "^3.21.1"
  }
}
